[$Starting point #home.Gx]
$app#name[
  "MyGxApp"
]

[UI
  $layout[
    +type#
      "flex"
    +direction#
      "column"
    +children#
      $header[
        +text#
          "Welcome to GX Language!"
        +style#
          $fontSize: "24px"
          $color: $PRIMARY_COLOR
      ]
      $content[
        +text#
          "Start coding with GX today!"
        +style#
          $fontSize: "18px"
          $color: $SECONDARY_COLOR
      ]
      $logo[
        +image#
          "logo.png"
      ]
      $button[
        +text#
          "Click Me"
        +style#
          $fontSize: "16px"
          $backgroundColor: $BUTTON_COLOR
          $color: "#ffffff"
        +onPress#
          [System#alert["You clicked the button!"]]
      ]
  ]
]
[#End point Gx$]
